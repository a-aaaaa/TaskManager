<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager" xmlns:views="clr-namespace:TaskManager.Views"
        xmlns:vms="clr-namespace:TaskManager.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        Background="AliceBlue"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15 20" HorizontalAlignment="Center">
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:DailyTasksViewModel}">
                <views:DailyTasksView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:NewDailyTaskViewModel}">
                <views:NewDailyTaskView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />

    </Grid>
</Window>
